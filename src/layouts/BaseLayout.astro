      { href: "/food", label: "Gastronom√≠a", icon: "üçΩÔ∏è", description: "Sabores tradicionales" },
    ]
  },
  informacion: {
    label: "Informaci√≥n",
    paths: ["/comunidad", "/directorio"],
    items: [
      { href: "/comunidad", label: "Comunidad", icon: "üë•", description: "Vida comunal y eventos" },
      { href: "/directorio", label: "Directorio", icon: "üìñ", description: "Negocios y servicios" },
    ]
  }
};
