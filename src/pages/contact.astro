    </div>
  </section>
</BaseLayout>

<script>
  // Anti-spam: Record page load timestamp
  const formLoadedAt = document.getElementById(
    "form_loaded_at"
  ) as HTMLInputElement;
  const loadTime = Date.now();
  formLoadedAt.value = loadTime.toString();

  // Character counter for message field
  const messageField = document.getElementById(
    "message"
  ) as HTMLTextAreaElement;
  const charCount = document.getElementById("char-count") as HTMLSpanElement;

  messageField?.addEventListener("input", () => {
    const count = messageField.value.length;
    charCount.textContent = count.toString();

    // Visual feedback when approaching limit
    if (count > 900) {
      charCount.classList.add("text-naranja", "font-semibold");
    } else {
      charCount.classList.remove("text-naranja", "font-semibold");
    }
  });

  // Form submission handler with anti-spam validation and AJAX
  const contactForm = document.getElementById(
    "contact-form"
  ) as HTMLFormElement;
  const submitBtn = document.getElementById("submit-btn") as HTMLButtonElement;
  const buttonText = document.getElementById("button-text") as HTMLSpanElement;
  const buttonIcon = document.getElementById("button-icon") as SVGElement;
  const loadingSpinner = document.getElementById(
    "loading-spinner"
  ) as SVGElement;
  const formStatus = document.getElementById("form-status") as HTMLDivElement;
  const statusMessage = document.getElementById(
    "status-message"
  ) as HTMLDivElement;

  function showStatus(message: string, type: "success" | "error" | "warning") {
    formStatus.classList.remove("hidden");
    statusMessage.textContent = message;

    // Reset classes
    statusMessage.classList.remove(
      "bg-green-100",
      "text-green-800",
      "bg-red-100",
      "text-red-800",
      "bg-amarillo",
      "text-gray-800"
    );

    // Apply new classes based on type
    if (type === "success") {
      statusMessage.classList.add("bg-green-100", "text-green-800");
    } else if (type === "error") {
      statusMessage.classList.add("bg-red-100", "text-red-800");
    } else if (type === "warning") {
      statusMessage.classList.add("bg-amarillo", "text-gray-800");
    }

    // Auto-hide success messages after 8 seconds
    if (type === "success") {
      setTimeout(() => {
        formStatus.classList.add("hidden");
      }, 8000);
    }

    // Scroll to status message
    formStatus.scrollIntoView({ behavior: "smooth", block: "nearest" });
  }

  function setLoading(isLoading: boolean) {
    if (isLoading) {
      submitBtn.disabled = true;
      submitBtn.classList.add("opacity-75", "cursor-not-allowed");
      buttonText.textContent = "Enviando...";
      buttonIcon.classList.add("hidden");
      loadingSpinner.classList.remove("hidden");
    } else {
      submitBtn.disabled = false;
      submitBtn.classList.remove("opacity-75", "cursor-not-allowed");
      buttonText.textContent = "Enviar Mensaje";
      buttonIcon.classList.remove("hidden");
      loadingSpinner.classList.add("hidden");
    }
  }

  contactForm?.addEventListener("submit", async (e) => {
    e.preventDefault();

    // Anti-spam validation: Check minimum time spent on page (3 seconds)
    const currentTime = Date.now();
    const timeSpent = (currentTime - loadTime) / 1000; // in seconds

    if (timeSpent < 3) {
      showStatus(
        "Por favor, tómate un momento para revisar tu mensaje antes de enviarlo.",
        "warning"
      );
      return;
    }

    // Get form data
    const formData = new FormData(contactForm);

    // Anti-spam: Check honeypot field (should be empty)
    const honeypot = formData.get("_gotcha") as string;
    if (honeypot && honeypot.trim() !== "") {
      // Silently reject (don't show error to bot)
      console.warn("Spam detected");
      return;
    }

    // Set loading state
    setLoading(true);
    formStatus.classList.add("hidden");

    try {
      // Submit form via AJAX
      const response = await fetch(contactForm.action, {
        method: "POST",
        body: formData,
        headers: {
          Accept: "application/json",
        },
      });

      if (response.ok) {
        // Success
        showStatus(
          "¡Gracias por tu mensaje! Te responderemos lo antes posible.",
          "success"
        );

        // Reset form
        contactForm.reset();
        charCount.textContent = "0";

        // Update timestamp for potential resubmission
        formLoadedAt.value = Date.now().toString();
      } else {
        // Error from server
        const data = await response.json();
        const errorMessage = data.errors
          ? data.errors.map((e: { message: string }) => e.message).join(", ")
          : "Hubo un error al enviar tu mensaje. Por favor, intenta nuevamente.";

        showStatus(errorMessage, "error");
      }
    } catch (error) {
      // Network error or other issues
      showStatus(
        "No se pudo conectar con el servidor. Verifica tu conexión e intenta nuevamente.",
        "error"
      );
      console.error("Form submission error:", error);
    } finally {
      setLoading(false);
    }
  });
</script>

<style>
  /* Ensure honeypot field is completely hidden */
  input[name="_gotcha"] {
    position: absolute !important;
    left: -9999px !important;
    width: 1px !important;
    height: 1px !important;
    opacity: 0 !important;
  }
</style>
