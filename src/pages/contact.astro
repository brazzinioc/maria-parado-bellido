---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/Hero.astro";

const formspreeId = import.meta.env.PUBLIC_FORMSPREE_ID || "YOUR_FORM_ID";
---

<BaseLayout
  title="Contacto"
  description="Contáctanos para planificar tu visita a María Parado de Bellido, Ayacucho. Información sobre tours, festividades y turismo cultural."
  image="/images/hero-contact.webp"
>
  <Hero
    title="Contáctanos"
    subtitle="Estamos aquí para ayudarte a planificar tu visita"
    image="/images/hero-contact.webp"
    imageAlt="Contacto María Parado de Bellido"
    height="small"
  />

  <section class="container-custom py-16 md:py-20">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Contact Form -->
      <div class="reveal">
        <h2 class="text-3xl font-heading font-bold text-indigo mb-6">
          Envíanos un Mensaje
        </h2>

        <!-- Status Messages -->
        <div id="form-status" class="mb-6 hidden">
          <div id="status-message" class="p-4 rounded-lg"></div>
        </div>

        <form
          id="contact-form"
          class="space-y-6"
          action={`https://formspree.io/f/${formspreeId}`}
          method="POST"
        >
          <!-- Honeypot field (anti-spam) - hidden from users -->
          <input
            type="text"
            name="_gotcha"
            style="display:none"
            tabindex="-1"
            autocomplete="off"
          />

          <!-- Timestamp field (anti-spam) - validates minimum time on page -->
          <input
            type="hidden"
            id="form_loaded_at"
            name="form_loaded_at"
            value=""
          />

          <div>
            <label
              for="name"
              class="block text-sm font-medium text-gray-700 mb-2"
            >
              Nombre completo <span class="text-rojo">*</span>
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              minlength="2"
              maxlength="100"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo focus:border-transparent transition-colors"
              placeholder="Tu nombre"
            />
          </div>

          <div>
            <label
              for="email"
              class="block text-sm font-medium text-gray-700 mb-2"
            >
              Correo electrónico <span class="text-rojo">*</span>
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              maxlength="100"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo focus:border-transparent transition-colors"
              placeholder="tu@email.com"
            />
          </div>

          <div>
            <label
              for="phone"
              class="block text-sm font-medium text-gray-700 mb-2"
            >
              Teléfono (opcional)
            </label>
            <input
              type="tel"
              id="phone"
              name="phone"
              minlength="7"
              maxlength="20"
              pattern="[+]?[0-9\s\-()]+"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo focus:border-transparent transition-colors"
              placeholder="+51 999 999 999"
            />
          </div>

          <div>
            <label
              for="subject"
              class="block text-sm font-medium text-gray-700 mb-2"
            >
              Asunto <span class="text-rojo">*</span>
            </label>
            <select
              id="subject"
              name="subject"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo focus:border-transparent transition-colors"
            >
              <option value="">Selecciona un asunto</option>
              <option value="tour">Consulta sobre tours</option>
              <option value="festivity">Información de festividades</option>
              <option value="accommodation">Alojamiento</option>
              <option value="general">Consulta general</option>
              <option value="other">Otro</option>
            </select>
          </div>

          <div>
            <label
              for="message"
              class="block text-sm font-medium text-gray-700 mb-2"
            >
              Mensaje <span class="text-rojo">*</span>
            </label>
            <textarea
              id="message"
              name="message"
              rows="5"
              required
              minlength="10"
              maxlength="1000"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo focus:border-transparent transition-colors resize-none"
              placeholder="Cuéntanos cómo podemos ayudarte..."></textarea>
            <p class="text-sm text-gray-500 mt-1">
              <span id="char-count">0</span>/1000 caracteres
            </p>
          </div>

          <button
            type="submit"
            id="submit-btn"
            class="btn-primary w-full justify-center"
          >
            <span id="button-text">Enviar Mensaje</span>
            <svg
              id="button-icon"
              class="w-5 h-5 ml-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
            </svg>
            <!-- Loading spinner (hidden by default) -->
            <svg
              id="loading-spinner"
              class="w-5 h-5 ml-2 animate-spin hidden"
              fill="none"
              viewBox="0 0 24 24"
            >
              <circle
                class="opacity-25"
                cx="12"
                cy="12"
                r="10"
                stroke="currentColor"
                stroke-width="4"></circle>
              <path
                class="opacity-75"
                fill="currentColor"
                d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
              ></path>
            </svg>
          </button>
        </form>
      </div>

      <!-- Contact Info -->
      <div class="reveal">
        <h2 class="text-3xl font-heading font-bold text-indigo mb-6">
          Información de Contacto
        </h2>

        <div class="space-y-6 mb-8">
          <div class="flex items-start gap-4">
            <div
              class="flex-shrink-0 w-12 h-12 bg-indigo rounded-lg flex items-center justify-center"
            >
              <svg
                class="w-6 h-6 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
