---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Hero from "../../components/Hero.astro";
import InteractiveMap from "../../components/InteractiveMap";
import { fetchTours, fetchTourBySlug } from "../../lib/api";

export async function getStaticPaths() {
  const tours = await fetchTours();
  return tours.map((tour) => ({
    params: { slug: tour.slug },
    props: { tour },
  }));
}

const { tour } = Astro.props;

const difficultyLabels = {
  easy: "Fácil",
  moderate: "Moderado",
  hard: "Difícil",
};

const difficultyColors = {
  easy: "bg-green-100 text-green-800",
  moderate: "bg-yellow-100 text-yellow-800",
  hard: "bg-red-100 text-red-800",
};

// Map markers for this tour
const mapMarkers = tour.locations.map((loc, index) => ({
  id: `loc-${index}`,
  title: loc.name,
  type: "place" as const,
  ...loc,
}));
---

<BaseLayout
  title={tour.title}
  description={tour.summary}
  image={tour.images[0]}
  structuredData={{ type: "tour", data: tour }}
>
  <Hero
    title={tour.title}
    subtitle={`${tour.duration_hours}h de aventura | ${tour.currency} ${tour.price.toFixed(2)}`}
    image={tour.images[0]}
    imageAlt={tour.title}
    height="medium"
  />

  <div class="container-custom py-16 md:py-20">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      <!-- Main Content -->
      <div class="lg:col-span-2">
        <!-- Description -->
        <section class="mb-12 reveal">
          <h2 class="text-3xl font-heading font-bold text-indigo mb-6">
            Descripción
          </h2>
          <div class="prose prose-lg max-w-none text-gray-700">
            <p>{tour.description}</p>
          </div>
        </section>

        <!-- Gallery -->
        {
          tour.images.length > 1 && (
            <section class="mb-12 reveal">
              <h2 class="text-3xl font-heading font-bold text-indigo mb-6">
                Galería
              </h2>
              <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                {tour.images.slice(1).map((image, index) => (
                  <div class="aspect-square overflow-hidden rounded-lg shadow-md">
                    <img
                      src={image}
                      alt={`${tour.title} - Imagen ${index + 2}`}
                      class="w-full h-full object-cover hover:scale-110 transition-transform duration-300"
                      loading="lazy"
                    />
                  </div>
                ))}
              </div>
            </section>
          )
        }

        <!-- Locations Map -->
        <section class="mb-12 reveal">
          <h2 class="text-3xl font-heading font-bold text-indigo mb-6">
            Ubicación
          </h2>
          <InteractiveMap
            client:load
            markers={mapMarkers}
            center={[tour.locations[0].lat, tour.locations[0].lng]}
            zoom={14}
            className="h-96 rounded-xl overflow-hidden shadow-lg"
          />
          <div class="mt-4">
            <h3 class="font-heading font-semibold text-lg text-gray-800 mb-2">
              Puntos de interés:
            </h3>
            <ul class="space-y-2">
              {
                tour.locations.map((loc) => (
                  <li class="flex items-start gap-2 text-gray-700">
                    <svg
                      class="w-5 h-5 text-mostaza flex-shrink-0 mt-0.5"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
                        clip-rule="evenodd"
                      />
                    </svg>
                    <span>{loc.name}</span>
                  </li>
                ))
              }
            </ul>
          </div>
        </section>
      </div>

      <!-- Sidebar -->
      <div class="lg:col-span-1">
        <div class="sticky top-24">
          <!-- Booking Card -->
          <div class="card p-6 mb-6 reveal">
            <div class="mb-6">
              <div class="text-4xl font-heading font-bold text-terracota mb-1">
                {tour.currency}
                {tour.price.toFixed(2)}
              </div>
              <div class="text-sm text-gray-600">por persona</div>
            </div>

            <!-- Tour Details -->
            <div class="space-y-4 mb-6">
              <div class="flex items-center gap-3 text-gray-700">
                <svg
                  class="w-5 h-5 text-indigo flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span
                  ><strong>Duración:</strong> {tour.duration_hours} horas</span
                >
              </div>

              {
                tour.difficulty && (
                  <div class="flex items-center gap-3">
                    <svg
                      class="w-5 h-5 text-indigo flex-shrink-0"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M13 10V3L4 14h7v7l9-11h-7z"
                      />
                    </svg>
                    <div>
                      <strong>Dificultad:</strong>
                      <span
                        class={`ml-2 text-xs px-2 py-1 rounded-full ${difficultyColors[tour.difficulty]}`}
                      >
                        {difficultyLabels[tour.difficulty]}
                      </span>
                    </div>
                  </div>
                )
              }

              {
                tour.max_participants && (
                  <div class="flex items-center gap-3 text-gray-700">
                    <svg
                      class="w-5 h-5 text-indigo flex-shrink-0"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                      />
                    </svg>
                    <span>
                      <strong>Máximo:</strong> {tour.max_participants} personas
                    </span>
                  </div>
                )
              }
            </div>

            <!-- CTA -->
            <a href="/contact" class="btn-primary w-full justify-center mb-4">
              Reservar Ahora
            </a>
            <a
              href={`tel:${tour.guide.phone}`}
              class="btn-secondary w-full justify-center text-sm"
            >
              <svg
                class="w-4 h-4 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                ></path>
              </svg>
              Llamar al Guía
            </a>
          </div>

          <!-- Guide Info -->
          <div class="card p-6 reveal">
            <h3 class="font-heading font-semibold text-lg text-indigo mb-4">
              Tu Guía
            </h3>
            <div class="flex items-center gap-4 mb-4">
              <div
                class="w-16 h-16 bg-gradient-to-br from-indigo to-mostaza rounded-full flex items-center justify-center"
              >
                <span class="text-white font-heading font-bold text-2xl">
                  {
                    tour.guide.name
                      .split(" ")
                      .map((n) => n[0])
                      .join("")
                  }
                </span>
              </div>
              <div>
                <div class="font-semibold text-gray-800">{tour.guide.name}</div>
                <div class="text-sm text-gray-600">Guía Local Certificado</div>
              </div>
            </div>
            <div class="space-y-2 text-sm">
              <a
                href={`tel:${tour.guide.phone}`}
                class="flex items-center gap-2 text-gray-700 hover:text-indigo"
              >
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                  ></path>
                </svg>
                {tour.guide.phone}
              </a>
              {
                tour.guide.email && (
                  <a
                    href={`mailto:${tour.guide.email}`}
                    class="flex items-center gap-2 text-gray-700 hover:text-indigo"
                  >
                    <svg
                      class="w-4 h-4"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                      />
                    </svg>
                    {tour.guide.email}
                  </a>
                )
              }
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Related Tours CTA -->
  <section class="bg-crema py-12">
    <div class="container-custom text-center">
      <h3 class="text-2xl font-heading font-bold text-indigo mb-4">
        Descubre Más Experiencias
      </h3>
      <a href="/tours" class="btn-secondary"> Ver Todos los Tours </a>
    </div>
  </section>
</BaseLayout>
