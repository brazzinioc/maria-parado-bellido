---
import type { Festivity } from '../types';

interface Props {
  festivity: Festivity;
}

const { festivity } = Astro.props;
const primaryImage = festivity.images[0] || '/images/placeholder-festivity.webp';

// Format dates
const startDate = new Date(festivity.start_date);
const endDate = new Date(festivity.end_date);
const sameDay = festivity.start_date === festivity.end_date;

const formatDate = (date: Date) => {
  return date.toLocaleDateString('es-PE', { day: 'numeric', month: 'long', year: 'numeric' });
};
---

<article class="card group">
  <!-- Image with Date Badge -->
  <div class="relative h-56 overflow-hidden">
    <img
      src={primaryImage}
      alt={festivity.name}
      class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
      loading="lazy"
    />
    <div class="absolute top-3 left-3 bg-terracota text-white px-4 py-2 rounded-lg shadow-lg">
      <div class="text-center">
        <div class="text-2xl font-bold">{startDate.getDate()}</div>
        <div class="text-xs uppercase">
          {startDate.toLocaleDateString('es-PE', { month: 'short' })}
        </div>
      </div>
    </div>
  </div>

  <!-- Content -->
  <div class="p-6">
    <h3 class="text-xl font-heading font-semibold text-indigo mb-2 line-clamp-2">
      {festivity.name}
    </h3>

    <p class="text-sm text-gray-500 mb-3">
      {sameDay ? formatDate(startDate) : `${formatDate(startDate)} - ${formatDate(endDate)}`}
    </p>

    <p class="text-gray-600 mb-4 line-clamp-3">
      {festivity.description}
    </p>

    <!-- Cargontes -->
    {festivity.cargontes && festivity.cargontes.length > 0 && (
      <div class="mb-4">
        <h4 class="text-sm font-semibold text-indigo mb-2">Cargontes responsables:</h4>
        <ul class="space-y-1">
          {festivity.cargontes.slice(0, 3).map((cargonte) => (
            <li class="text-xs text-gray-600 flex items-start gap-2">
              <svg class="w-3 h-3 mt-0.5 text-mostaza flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              <span><strong>{cargonte.role}:</strong> {cargonte.name}</span>
            </li>
          ))}
          {festivity.cargontes.length > 3 && (
            <li class="text-xs text-gray-500 italic">
              +{festivity.cargontes.length - 3} m√°s...
            </li>
          )}
        </ul>
      </div>
    )}

    <!-- Location -->
    <div class="flex items-center gap-2 text-sm text-gray-600 mb-4">
      <svg class="w-4 h-4 text-mostaza flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
      </svg>
      <span class="line-clamp-1">{festivity.place.name}</span>
    </div>

    <!-- CTA -->
    <a
      href={`/festivities/${festivity.slug}`}
      class="block w-full text-center px-4 py-2 bg-mostaza text-white rounded-lg hover:bg-mostaza-dark transition-colors duration-300 text-sm font-medium"
    >
      Ver programa completo
    </a>
  </div>
</article>
