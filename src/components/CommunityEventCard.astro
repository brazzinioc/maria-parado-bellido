---
import type { CommunityEvent } from "../types";

interface Props {
  event: CommunityEvent;
}

const { event } = Astro.props;

// Formato de fecha
const eventDate = new Date(event.date);
const day = eventDate.getDate();
const month = eventDate.toLocaleDateString("es-PE", { month: "short" });
const year = eventDate.getFullYear();

// Colores por tipo de evento
const typeColors: Record<CommunityEvent["type"], { bg: string; text: string; icon: string }> = {
  faena: { bg: "bg-verde/10", text: "text-verde-dark", icon: "ğŸ› ï¸" },
  pollada: { bg: "bg-naranja/10", text: "text-naranja-dark", icon: "ğŸ—" },
  reunion: { bg: "bg-azul/10", text: "text-azul-dark", icon: "ğŸ‘¥" },
  asamblea: { bg: "bg-purpura/10", text: "text-purpura-dark", icon: "ğŸ›ï¸" },
  minka: { bg: "bg-terracota/10", text: "text-terracota-dark", icon: "ğŸ¤" },
  aniversario: { bg: "bg-fucsia/10", text: "text-fucsia-dark", icon: "ğŸ‰" },
  otro: { bg: "bg-gray-100", text: "text-gray-700", icon: "ğŸ“Œ" },
};

const typeLabels: Record<CommunityEvent["type"], string> = {
  faena: "Faena Comunal",
  pollada: "Pollada/Actividad",
  reunion: "ReuniÃ³n",
  asamblea: "Asamblea",
  minka: "Minka",
  aniversario: "Aniversario",
  otro: "Evento",
};

const { bg, text, icon } = typeColors[event.type];
---

<article class="card-modern bg-white rounded-2xl shadow-md overflow-hidden border border-gray-100 hover:border-fucsia/30 transition-all duration-300">
  <div class="flex flex-col md:flex-row">
    <!-- Date Badge -->
    <div class="md:w-28 flex-shrink-0 bg-gradient-to-br from-azul to-purpura p-4 flex flex-col items-center justify-center text-white">
      <span class="text-3xl font-bold">{day}</span>
      <span class="text-sm uppercase tracking-wide">{month}</span>
      <span class="text-xs opacity-80">{year}</span>
    </div>

    <!-- Content -->
    <div class="flex-1 p-5">
      <!-- Type Badge -->
      <div class="flex items-center gap-2 mb-3">
        <span class={`inline-flex items-center gap-1.5 px-3 py-1 rounded-full text-sm font-medium ${bg} ${text}`}>
          <span>{icon}</span>
          {typeLabels[event.type]}
        </span>
        {event.isRecurring && (
          <span class="inline-flex items-center gap-1 px-2 py-0.5 rounded-full text-xs font-medium bg-amarillo/20 text-amarillo-dark">
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
            </svg>
            Recurrente
          </span>
        )}
      </div>

      <!-- Title -->
      <h3 class="font-heading font-bold text-xl text-gray-800 mb-2 group-hover:text-fucsia transition-colors">
        {event.title}
      </h3>

      <!-- Description -->
      <p class="text-gray-600 text-sm mb-4 line-clamp-2">
        {event.description}
      </p>

      <!-- Meta Info -->
      <div class="flex flex-wrap items-center gap-4 text-sm text-gray-500">
        {event.time && (
          <div class="flex items-center gap-1.5">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>{event.time}</span>
          </div>
        )}
        <div class="flex items-center gap-1.5">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <span>{event.location.name}</span>
        </div>
        {event.organizer && (
          <div class="flex items-center gap-1.5">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            <span>{event.organizer}</span>
          </div>
        )}
      </div>
    </div>
  </div>
</article>
