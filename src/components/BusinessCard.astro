---
import type { Business } from "../types";

interface Props {
  business: Business;
}

const { business } = Astro.props;

// Colores e iconos por categorÃ­a
const categoryStyles: Record<Business["category"], { bg: string; text: string; icon: string; label: string }> = {
  hostal: { bg: "bg-azul/10", text: "text-azul-dark", icon: "ğŸ¨", label: "Hospedaje" },
  restaurante: { bg: "bg-naranja/10", text: "text-naranja-dark", icon: "ğŸ½ï¸", label: "Restaurante" },
  tienda: { bg: "bg-verde/10", text: "text-verde-dark", icon: "ğŸ›’", label: "Tienda" },
  transporte: { bg: "bg-turquesa/10", text: "text-turquesa-dark", icon: "ğŸš", label: "Transporte" },
  artesania: { bg: "bg-fucsia/10", text: "text-fucsia-dark", icon: "ğŸ¨", label: "ArtesanÃ­a" },
  servicio: { bg: "bg-purpura/10", text: "text-purpura-dark", icon: "âš™ï¸", label: "Servicio" },
};

const priceLabels: Record<NonNullable<Business["priceRange"]>, { label: string; icon: string }> = {
  economico: { label: "EconÃ³mico", icon: "ğŸ’°" },
  moderado: { label: "Moderado", icon: "ğŸ’°ğŸ’°" },
  premium: { label: "Premium", icon: "ğŸ’°ğŸ’°ğŸ’°" },
};

const { bg, text, icon, label } = categoryStyles[business.category];
---

<article class="card-modern bg-white rounded-2xl shadow-md overflow-hidden border border-gray-100 hover:border-turquesa/30 transition-all duration-300 group">
  <!-- Image placeholder or gradient -->
  <div class="h-40 bg-gradient-to-br from-crema via-white to-crema-warm relative overflow-hidden">
    {business.images && business.images.length > 0 ? (
      <img
        src={business.images[0]}
        alt={business.name}
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
        loading="lazy"
      />
    ) : (
      <div class="absolute inset-0 flex items-center justify-center">
        <span class="text-6xl opacity-30">{icon}</span>
      </div>
    )}

    <!-- Category Badge -->
    <div class="absolute top-3 left-3">
      <span class={`inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full text-sm font-semibold ${bg} ${text} backdrop-blur-sm`}>
        <span>{icon}</span>
        {label}
      </span>
    </div>

    <!-- Verified Badge -->
    {business.isVerified && (
      <div class="absolute top-3 right-3">
        <span class="inline-flex items-center gap-1 px-2 py-1 rounded-full text-xs font-medium bg-verde/90 text-white">
          <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          Verificado
        </span>
      </div>
    )}
  </div>

  <!-- Content -->
  <div class="p-5">
    <!-- Name -->
    <h3 class="font-heading font-bold text-xl text-gray-800 mb-2 group-hover:text-turquesa transition-colors">
      {business.name}
    </h3>

    <!-- Description -->
    <p class="text-gray-600 text-sm mb-4 line-clamp-2">
      {business.description}
    </p>

    <!-- Meta Info -->
    <div class="space-y-2 text-sm text-gray-500 mb-4">
      <div class="flex items-start gap-2">
        <svg class="w-4 h-4 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
        <span>{business.address}</span>
      </div>

      {business.hours && (
        <div class="flex items-center gap-2">
          <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span>{business.hours}</span>
        </div>
      )}

      {business.priceRange && (
        <div class="flex items-center gap-2">
          <span class="text-amarillo-dark">{priceLabels[business.priceRange].icon}</span>
          <span>{priceLabels[business.priceRange].label}</span>
        </div>
      )}
    </div>

    <!-- Services Tags -->
    {business.services && business.services.length > 0 && (
      <div class="flex flex-wrap gap-1.5 mb-4">
        {business.services.slice(0, 3).map((service) => (
          <span class="px-2 py-0.5 bg-gray-100 text-gray-600 text-xs rounded-full">
            {service}
          </span>
        ))}
        {business.services.length > 3 && (
          <span class="px-2 py-0.5 bg-gray-100 text-gray-500 text-xs rounded-full">
            +{business.services.length - 3} mÃ¡s
          </span>
        )}
      </div>
    )}

    <!-- Contact Buttons -->
    <div class="flex gap-2">
      {business.phone && (
        <a
          href={`tel:${business.phone}`}
          class="flex-1 inline-flex items-center justify-center gap-1.5 px-4 py-2 bg-azul/10 text-azul-dark rounded-lg text-sm font-medium hover:bg-azul hover:text-white transition-all duration-300"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          Llamar
        </a>
      )}
      {business.whatsapp && (
        <a
          href={`https://wa.me/${business.whatsapp.replace(/\D/g, '')}`}
          target="_blank"
          rel="noopener noreferrer"
          class="flex-1 inline-flex items-center justify-center gap-1.5 px-4 py-2 bg-verde/10 text-verde-dark rounded-lg text-sm font-medium hover:bg-verde hover:text-white transition-all duration-300"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          WhatsApp
        </a>
      )}
    </div>
  </div>
</article>
