---
interface Props {
  title: string;
  subtitle?: string;
  image: string;
  imageAlt: string;
  height?: "small" | "medium" | "large";
  overlay?: boolean;
}

const {
  title,
  subtitle,
  image,
  imageAlt,
  height = "large",
  overlay = true,
} = Astro.props;

const heightClasses = {
  small: "h-64 md:h-80",
  medium: "h-96 md:h-[28rem]",
  large: "h-[32rem] md:h-[40rem] lg:h-[48rem]",
};
---

<section
  class={`relative w-full ${heightClasses[height]} overflow-hidden pattern-overlay`}
>
  <!-- Background Image -->
  <div class="absolute inset-0">
    <img
      src={image}
      alt={imageAlt}
      class="w-full h-full object-cover object-bottom"
      loading="eager"
    />
    {
      overlay && (
        <div class="absolute inset-0 bg-gradient-to-b from-black/50 via-black/30 to-black/65" />
      )
    }
  </div>

  <!-- Content -->
  <div class="relative h-full flex items-center justify-center text-center">
    <div class="container-custom px-6">
      <h1
        class="text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-heading font-bold text-white mb-4 animate-fade-in drop-shadow-lg"
      >
        {title}
      </h1>
      {
        subtitle && (
          <p class="text-xl md:text-2xl lg:text-3xl text-white/95 font-light max-w-3xl mx-auto animate-slide-up drop-shadow-md">
            {subtitle}
          </p>
        )
      }
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <svg
      class="w-6 h-6 text-white"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
      aria-hidden="true"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>
